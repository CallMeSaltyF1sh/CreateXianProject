/* pages/search/search.wxss */
.container{
  padding: 25rpx;
  box-sizing: border-box;
}
.header{
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 44rpx;
  letter-spacing: 6rpx;
  padding: 12rpx 0;
  border-bottom: 2rpx solid #ddd;
  box-shadow: 0 5rpx 20rpx #ccc;
  border-radius: 12rpx;
}
.bar{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 10rpx;
}
.bar-item{
  width: 50%;
  text-align: center;
  padding: 15rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
  color: #888;
}
.selected{
  color: #C80405;
  border-bottom: 2rpx solid #C80405;
}
/*政策列表*/
.list-item{
  width: 100%;
  padding: 30rpx 22rpx; 
  box-sizing: border-box;
  border-top: 2rpx solid #eee;
}
.list-item:first-child{
  border-top: 0;
}
.list-item:last-child{
  border-bottom: 2rpx solid #eee;
}
.item-title{
  margin-bottom: 30rpx;
  width: 100%;
  font-size: 36rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-detail{
  font-size: 32rpx;
  color: #aaa;
  padding-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*活动列表*/
.post-container {
  position: relative;
  width: 95%;
  margin: 20rpx 0 20rpx 2.5%;
  flex-direction: column;
  display: flex;
  background-color: #fff;
  border: 2rpx solid #ededed;
  padding-bottom: 10rpx;
  border-radius: 35rpx;
}
.post-container:last-child{
  margin-bottom: 0;
}
.post-author-date {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.post-author {
  max-width: 150rpx;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  margin-right: 20rpx;
}
.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background-color: #f9f9f9;
}
.post-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.load-more{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #555;
}
.emptyImg{
  position: absolute;
  width: 130rpx;
  height: 110rpx;
  left: 50%;
  margin-left: -65rpx;
  margin-top: 310rpx;
}
.emptyTxt{
  position: absolute;
  width: 100%;
  text-align: center;
  color: #ccc;
  margin-top: 270rpx;
  letter-spacing: 2rpx;
}